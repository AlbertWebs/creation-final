# Redirect all requests to public folder
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^(\.env|\.git|composer\.(json|lock)|package\.json|package-lock\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>
